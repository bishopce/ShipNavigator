//Written by Claire Bishop
public class CargoShip extends Ship {

	//instance variables
	private double tonnage;
	private double maxSpeed;
	
	//accessors
	public double getTonnage() {
		return this.tonnage;
	}
	
	public double getSpeed() {
		return this.maxSpeed;
	}
	
	//mutators - check for invalid values
	public void setTonnage(double xTonnage) {
		if(xTonnage > 0) {
			this.tonnage = xTonnage;
		}
		else {
			System.out.println("Invalid value entered for ship tonnage!");
		}
	}
	
	public void setSpeed(double xSpeed) {
		if(xSpeed > 0) {
			this.maxSpeed = xSpeed;
		}
		else {
			System.out.println("Invalid value entered for maximum ship speed!");
		}
	}
	
	//overriding other toString()
	public String toString() {
		return "Ship Name: "+getName()+"\nShip Tonnage: "+this.tonnage+" DWT \nMaximum Speed: "+this.maxSpeed+" mph";
	}
	
}
